@model ServerDiplom.Models.UserModel

<h2>Авторизация</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" ></div>
    <div>
        <span asp-validation-for="Login"></span>
        <div class="input-group flex-nowrap" style="margin-bottom: 10px;">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Логин</span>
            </div>
            <input class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" type="text" asp-for="Login" />

        </div>
        <span asp-validation-for="Password"></span>
        <div class="input-group flex-nowrap" style="margin-bottom: 10px;">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Пароль</span>
            </div>
            <input class="form-control" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1" asp-for="Password" />
        </div>

        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

<a asp-action="Register" asp-controller="Account">Регистрация</a>